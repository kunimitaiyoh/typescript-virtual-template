# EditorConfig is awesome: http://EditorConfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 4

[{*.ts,*.tsx}]
indent_size = 2

[*.html]
indent_size = 2

[*.pegjs]
indent_size = 2
