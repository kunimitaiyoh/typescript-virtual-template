{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
        "*": ["types/*", "node_modules/@types/*", "*"],
        "@/*": ["src/*"]
    },
  },
  "exclude": [
    "dist",
    "node_modules",
    "testResult"
  ]
}
